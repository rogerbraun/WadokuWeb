  gem 'sass-rails', " ~> 3.1.0"  
  gem 'coffee-rails', " ~> 3.1.0"  
  gem 'uglifier'  
end

gem 'jquery-rails'
gem "draper"

group :development, :test do
  gem "pry"
  gem "progressbar"
  gem "rspec-rails"
  gem "watchr"
  gem "capybara"
  gem "factory_girl_rails"
end

group :deployment do
  gem "capistrano"
  gem "capistrano-ext"
end

gem "romkan"
gem "parslet"
gem "picky-client"
gem "yajl-ruby", :require => "yajl"

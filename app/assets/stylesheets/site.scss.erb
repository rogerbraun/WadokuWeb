body {
  padding-top: 40px;
  /* from http://subtlepatterns.com */
  background-image: image-url("handmadepaper.png");
}

html {
  /* from http://subtlepatterns.com */
  background-image: image-url("handmadepaper.png");
}

.content {
  background-color: #fff;
  padding: 20px;
  margin: 0 -20px; /* negative indent the amount of the padding to maintain the grid system */
  -webkit-border-radius: 0 0 6px 6px;
     -moz-border-radius: 0 0 6px 6px;
          border-radius: 0 0 6px 6px;
  -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.15);
     -moz-box-shadow: 0 1px 2px rgba(0,0,0,.15);
          box-shadow: 0 1px 2px rgba(0,0,0,.15);
}

.topbar .btn {
  border: 0;
}
 
.page-header {
  background-color: #f5f5f5;
  padding: 20px 20px 10px;
  margin: -20px -20px 20px;
}

.row {
  min-height: 500px;
}

.centered {
  display: block;
  margin-left: auto;
  margin-right: auto;
}

.loader {

  display:block;
  margin:0px auto;
  padding-top: 10px;
}

.results {
  padding-bottom: 10px;
}
  

/* Everything entry-related */

span.gen_m {
}
span.gen_n {
}
span.gen_f {
}

.emph {
  font-weight: bold;
}

span.genus {
  font-weight: bold;
  color:orange;
  font-size:xx-small;
}

span.f {
  font-weight: bold;
  color:red;
  font-size:xx-small;
}

span.m{
  font-weight: bold;
  color:blue;
  font-size:xx-small;
}

span.n {
  font-weight: bold;
  color:purple;
  font-size:xx-small;
}


span.dom {
  font-weight: bold;
}

span.usage, span.title, span.transcr, span.etym, span.scientif {
  font-style: italic;
}

span.def {
  color: green;
}

.entries {
  font-family: 'Crimson Text',arial, serif;
  font-size: 1.5em;
/*  text-align:justify; */
  padding-top:0.5em;
}

.hanging-indent {
text-indent: -25px;
padding-left: 25px;
}

.entry .writing {
  font-size: 1.5em;
}

.entry p {
  margin:0;
}

.entry {
  padding-top: 3px;
  padding-left:10px;
  padding-right:10px;
  padding-bottom: 3px;
}

.entry.even {
  background: #EBEEF5;
}

.entry.main_entry {
  background: #F8C3CD;
}

.prior_1, .prior_2, .prior_3, .prior_4, .jlpt1, .jlpt2, .jlpt3, .jlpt4, .genki_k9 {
  display:none;
}

.svg_image {
  padding-top: 10px;
  padding-bottom: 10px;
  display: block;
}

.svg_image .image_caption {
  font-size: 120%;
  font-weight: bold;
}

.svg_image .svg a img{
  width: 150px;
  display: block;
  margin-left: auto;
  margin-right: auto;
}

.pron_audio {
  background-image: image-url("loudspeaker.png");
  background-repeat: no-repeat;
  vertical-align: super;
}

.pron_audio a {
  margin-left: 15px;
}

.famn {
  font-variant: small-caps;
}

#entries-left:first-child {
  -moz-border-radius-topleft: 5px;
  -moz-border-radius-topright: 5px;
  -moz-border-radius-bottomright: 0px;
  -moz-border-radius-bottomleft: 0px;
  -webkit-border-radius: 5px 5px 0px 0px;
  border-radius: 5px 5px 0px 0px;
  
}

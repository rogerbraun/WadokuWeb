<div id="search_box" class="block notice">
  <h3>Suche</h3>
  <div class="content">
    <p><%= t "search.info" %></p>
    <p>
      <%=form_for search, :url => search_index_path, :html => {:class => :form} do |f| %>
          <div class="group">
          <%= f.label :romaji_or_writing_or_kana_starts_with, t("search.by_beginning"),:class => :label %> 
          <%= f.text_field :romaji_or_writing_or_kana_starts_with, :class=> "text_field"%> <br />
          </div>
          <div class="group">
          <%= f.label :definition_contains, t("search.by_definition"),:class => :label %> 
          <%= f.text_field :definition_contains, :class=> "text_field"%> <br />
          </div>

          <div class="group navform wat-cf">
            <button class="button" type="submit">
              <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("search", :default => "Save")}") %> <%= t("search.search", :default => "Save") %>
            </button>  
          </div>
      <% end %>
    </p>
  </div>
</div>

<%= javascript_tag do %>
  $(window).scroll(function(){
    if($(window).scrollTop() > 100) {
      $("#search_box").animate({"margin-top": ($(window).scrollTop() - 100) + "px"}, {queue: false});
     }
    else
    {
      $("#search_box").animate({"margin-top": "0px"}, {queue: false});
    }
      
  });
<% end %>


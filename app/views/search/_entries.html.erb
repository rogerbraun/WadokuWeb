
<div id="entries" class="entries <%= entries.size > 4 ? "with_columns" : "" %>">
  <% entries.each do |entry| %>
    <div class="entry <%= cycle "even", "odd" %>">
      <p class="hanging-indent" ><%=entry.full_html(root_url) %> 
        <% unless  entry.sub_entries.empty? %>
          <br /><%= link_to t("entry.detail"), entry_path(entry) %></p>
        <% end %>
    </div>
  <% end %>
</div>

<div class="actions-bar wat-cf pagination">
  <div class="actions">
    <%= paginate @page, @total%>
  </div>
</div>
<p>Suchdauer <%=@search_time%> Sekunden.</p>

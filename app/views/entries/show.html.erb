<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", entries_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_entry_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", entry_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.entry.wadoku_id", :default => t("activerecord.labels.wadoku_id", :default => "Wadoku")) %>:</b>
          <%= @entry.wadoku_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.entry.romaji", :default => t("activerecord.labels.romaji", :default => "Romaji")) %>:</b>
          <%= @entry.romaji %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.entry.writing", :default => t("activerecord.labels.writing", :default => "Writing")) %>:</b>
          <%= @entry.writing %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.entry.kana", :default => t("activerecord.labels.kana", :default => "Kana")) %>:</b>
          <%= @entry.kana %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.entry.definition", :default => t("activerecord.labels.definition", :default => "Definition")) %>:</b>
          <ul class="list">
            <%= raw @entry.defs_array_html.map{|x| "<li><p>#{x}</p></li>"}.join("\n") %>
          </ul>
        </p>

        <p>
          <b><%= t("activerecord.attributes.entry.entry_relation", :default => t("activerecord.labels.entry_relation", :default => "Verwandte EintrÃ¤ge")) %>:</b>
          <ul class="list">
            <% @entry.related.each do |cur_entry| %>
              <li>
                <h4>
                  <%=link_to "#{cur_entry.writing} - #{cur_entry.romaji}", cur_entry %>
                </h4>
                <p>
                  <%= raw cur_entry.short_html%>
                </p>
              </li>
  
            <% end %>
          </ul>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_entry_path(@entry), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), entry_path(@entry), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>

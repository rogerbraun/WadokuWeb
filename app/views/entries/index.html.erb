<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", entries_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_entry_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Entries</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>
            Romaji
          </th>
          <th>
            Definition
          </th> 
          <th class="last">&nbsp;</th>
        </tr>
        <% @entries.each do |entry| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= entry.id %>
          </td>
          <td>
            <%= entry.romaji %>
          </td>
                    <td>
            <%= entry.definition %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", entry_path(entry) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_entry_path(entry) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", entry_path(entry), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
        <%= will_paginate @entries  %>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
